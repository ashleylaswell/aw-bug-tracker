@using Microsoft.AspNetCore.Identity
@using AWBugTracker.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "admin"))
{
    <li class="nav-item dropdown show">
        <a class="dropdown-toggle nav-link" href="#" data-toggle="dropdown">Admin</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Admin" asp-controller="Project" asp-action="Index">Projects</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="UsersToProject" asp-action="Index">Users to Projects</a>
            @*<div class="dropdown-divider"></div>*@
        </div>
    </li>
}